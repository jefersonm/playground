/* 
Esta funo executa um comando SQL no banco de dados MySQL
$id - Ponteiro da Conexo 
$sql - Clusula SQL a executar 
$erro - Especifica se a funo exibe ou no(0=no, 1=sim) 
$res - Resposta 
*/ 
function mysqlexecuta($id,$sql,$erro = 1) { 
    if(empty($sql) OR !($id)) 
       return 0; //Erro na conexo ou no comando SQL   
   if (!($res = @mysql_query($sql,$id))) { 
      if($erro) 
        echo "Ocorreu um erro na execuo do Comando SQL no banco de dados. Favor Contactar o Administrador.";
      exit;
   } 
    return $res; 
 }
?>