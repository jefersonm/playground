package com.github.jefersonm.sandbox.scala

object Calculator {

  def calc(val1:Integer, val2:Integer, arg:Any): Any = arg match {
    case "+" => (val1 + val2)
    case "-" => val1 - val2
    case "*" => val1 * val2
    case "/" => val1 / val2
    case  _  => "This operation isn't supported"
  }
  
  def calc2() {
    val val1 = 1
    val val2 = 2
    println("sum: " + (val1 + val2))
  }
  
  def main(args: Array[String]) {
	  calc2();
  }
  
}